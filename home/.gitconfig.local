[alias]
    co = checkout
    b = branch
    lg = log --pretty=format:%h

[url "ssh://git@github.com/"]
    insteadOf = https://github.com/

[color]
    diff = auto
    status = auto
    branch = auto
    ui = true
[core]
    excludesfile = ~/.gitignore
    editor = vim
[grep]
    extendRegexp = true
    lineNumber = true
[push]
    default = simple
